<h1>Eat-Da-Burger!</h1>

<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        <h4>Burgers to Eat</h4>
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

 <div class="col s6">
   <h4>No longer available</h4>
        {{#each burgers}}
          {{#if this.devoured}}
          <div class='burgerEaten'>
            <div>{{this.burger_name}}</div>
          </div>
{{!-- code to turn devoured burgers into buttons for delete function.  could not get the delete function to work --}}
            {{!-- <form action="/burgers/{{this.id}}?_method=DELETE" method="DELETE">
              <button type="submit" class="burgerEaten"> {{this.burger_name}}</button>
            </form> --}}
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>


<h2>Add A Burger Option</h2>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Add a Delicious Burger">
      <button type="submit" class="addBurgerButton">Add a Burger</button>
    </form>
  </div>
</div>